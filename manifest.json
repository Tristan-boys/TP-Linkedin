{
	"manifest_version": 2,
	"name": "TP-Linkedin",
	"version": "1.0",
	"description": "Extension permettant de définir des statistiques à partir d'un profil Linkedin",
	"icons": {
		"128": "icons/icon-128.png"
	},
	"browser_action": {
		"default_popup": "src/popup/popup.html",
		"default_title": "TP-Linkedin",
		"default_icon": {
			"128": "icons/icon-128.png"
		}
	},
	"background": {
		"scripts": ["src/background/background.js"]
	},
	"permissions": [
		"storage",
		"activeTab",
		"tabs",
		"https://www.linkedin.com/in/*"
	],
	"content_scripts": [
		{
			"matches": ["https://www.linkedin.com/in/*"],
			"js": ["src/content/content.js"],
			"run_at": "document_idle"
		}
	]
}

{
	"manifest_version": 3,
	"name": "TP-Linkedin",
	"version": "1.0",
	"description": "Extension permettant de définir des statistiques à partir d'un profil Linkedin",
	"icons": { "128": "icons/icon-128.png" },
	"permissions": ["activeTab", "tabs"],
	"action": {
		"default_icon": { "128": "icons/icon-128.png" },
		"default_popup": "/src/popup/popup.html",
		"default_title": "TP-Linkedin"
	},
	"background": {
		"service_worker": "/src/background/background.js",
		"scripts": ["/src/background/background.js"]
	},
	"content_scripts": [
		{
			"matches": ["https://www.linkedin.com/in/*"],
			"js": ["/src/content/tools.js", "/src/content/content.js"]
		}
	]
}

{
    "manifest_version": 3,
    "name": "TP-Linkedin",
    "version": "1.0.0",
    "description": "Extension permettant de définir des statistiques à partir d'un profil Linkedin",
    "icons": {
      "128": "icons/icon-128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "TP-Linkedin",
      "default_icon": {
        "128": "icons/icon-128.png"
      }
    },
    "permissions": ["storage", "activeTab", "tabs"],
    "host_permissions": ["https://www.linkedin.com/in/*"],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/in/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
}